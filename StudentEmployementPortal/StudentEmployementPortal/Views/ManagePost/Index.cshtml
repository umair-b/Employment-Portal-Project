@model IEnumerable<JobPost>

<div class="container p-1">
    <div class="row pt-2">
        <div class="col-6">
            <h2 class="text-primary">Manage Posts</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="ManagePost" asp-action="CreatePost" class="btn btn-primary">Add Post</a>
        </div>
    </div>
    @if (Model.Count() == 0)
    {
        <h3>There are no jobs posts.</h3>
    }
    else
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Job Title</th>
                    @*<th>Department</th>*@
                    <th>Fulltime</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.JobTitle</td>
                        @*<td>@obj.DepartmentId</td>*@
                        @if (obj.FullTime)
                        {
                            <td>FT</td>
                        }
                        else
                        {
                            <td>PT</td>
                        }
                        <td>@String.Format("{0:dd MMMM yyyy}", obj.StartDate)</td>
                        <td>@String.Format("{0:dd MMMM yyyy}", obj.EndDate)</td>
                        <td>@obj.PostStatus</td>
                        <td style="width:100%" class="btn-group" role="group">
                            <a asp-controller="ManagePost" asp-action="Edit" asp-route-id="@obj.PostId"
                               class="btn btn-primary mx-1">Edit</a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    }
    
</div>

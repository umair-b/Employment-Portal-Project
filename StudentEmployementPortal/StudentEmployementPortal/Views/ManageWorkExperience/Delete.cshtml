@namespace StudentEmployementPortal.ViewModels
@model WorkExperienceViewModel

@using System.Globalization

<style>
    .right-align {
        float: right;
    }

    .left-align {
        float: left;
    }
</style>

<div>
    <a asp-controller="ManageStudentProfile" asp-action="Index" class="btn btn-outline-primary right-align " style="width:150px">
        &larr; Back
    </a>
</div>
<div class="row pb-2">
    <h2 class="text-primary">Delete Work Experience</h2>
</div>
<hr />

@{

    DateTime dateStart = new DateTime(Model.StartDate.Year, Model.StartDate.Month, Model.StartDate.Day);
    DateTime dateEnd = new DateTime(Model.EndDate.Value.Year, Model.EndDate.Value.Month, Model.EndDate.Value.Day);
}

<form asp-action="DeleteWorkExperience">
    <div class="form-control">
        <br />
        <dl class="row">
            <dt class="col-sm-2">
                Employer Name
            </dt>
            <dd class="col-sm-10">
                @Model.EmployerName
            </dd>

            <dt class="col-sm-2">
                Start Date
            </dt>
            <dd class="col-sm-10">
                @dateStart.ToString("MMMM", CultureInfo.InvariantCulture) @Model.StartDate.Year
            </dd>

            <dt class="col-sm-2">
                End Date
            </dt>
            @if (Model.EndDate == null)
            {
                <dd class="col-sm-10">
                    -
                </dd>
            }
            else
            {
                <dd class="col-sm-10">
                    @dateEnd.ToString("MMMM", CultureInfo.InvariantCulture) @Model.EndDate.Value.Year
                </dd>
            }
       
            <dt class="col-sm-2">
                Job Title
            </dt>
            <dd class="col-sm-10">
                @Model.JobTitle
            </dd>

            <dt class="col-sm-2">
                Tasks and Responsibilities
            </dt>
            <dd class="col-sm-10">
                @Model.TasksAndResponsibilities
            </dd>
        </dl>
    </div>
    @Html.HiddenFor(Model => Model.WorkExperienceId, new { @readonly = "readonly" })
    <br />

    <button type="submit" class="pt-2 btn btn-primary">Delete Work Experience</button>
    

</form>
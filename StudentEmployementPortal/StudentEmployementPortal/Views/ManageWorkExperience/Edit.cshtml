@namespace StudentEmployementPortal.ViewModels
@model WorkExperienceViewModel

<style>
    .right-align {
        float: right;
    }

    .left-align {
        float: left;
    }
</style>

<div>
    <a asp-controller="ManageStudentProfile" asp-action="Index" class="btn btn-outline-primary right-align " style="width:150px">
        &larr; Back
    </a>
</div>
<div class="row pb-2">
    <h2 class="text-primary">Add Referee</h2>
</div>
<hr />

<form asp-action="Edit">
    <div class="form-control">
        <div>
            <label asp-for="EmployerName"></label>
            <input asp-for="EmployerName" class="form-control" />
            <span asp-validation-for="EmployerName" class="text-danger"></span>
        </div>
        <br />
        <div class="row">
            <div class="col">
                <label asp-for="StartDate"></label>
                <input asp-for="StartDate" type="date" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="col">
                <label asp-for="EndDate"></label>
                <input asp-for="EndDate" type="date" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div>
            <label asp-for="JobTitle"></label>
            <input asp-for="JobTitle" class="form-control" />
            <span asp-validation-for="JobTitle" class="text-danger"></span>
        </div>
        <br />
        <div>
            <label asp-for="TasksAndResponsibilities"></label>
            <textarea asp-for="TasksAndResponsibilities" class="form-control"></textarea>
            <span asp-validation-for="TasksAndResponsibilities" class="text-danger"></span>
        </div>
    </div>
    <br />
    <button type="submit" class="pt-2 btn btn-primary">Update Work Experience</button>
    @Html.HiddenFor(Model => Model.WorkExperienceId, new { @readonly = "readonly" })
    
</form>
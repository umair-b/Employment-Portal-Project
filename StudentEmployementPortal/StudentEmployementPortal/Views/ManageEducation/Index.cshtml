@model Education

<style>
    .right-align {
        float: right;
    }

    .left-align {
        float: left;
    }
</style>

<div>
    <a asp-controller="ManageStudentProfile" asp-action="Index" class="btn btn-outline-primary right-align " style="width:150px">
        &larr; Back
    </a>
</div>
<div class="row pb-2">
    <h2 class="text-primary">Add Education</h2>
</div>
<hr />

<form asp-action="AddEducation" id="educationForm">
    <div class="form-control">
        <div>
            <label asp-for="Institution"></label>
            <input asp-for="Institution" class="form-control" id="institutionId"/>
            <span asp-validation-for="Institution" class="text-danger" id="institutionValidation"></span>
        </div>
        <br />
        <div class="row">
            <div class="col">
                <label asp-for="StartDate"></label>
                <input asp-for="StartDate" type="month" class="form-control" id="startDateId"/>
                <span asp-validation-for="StartDate" class="text-danger" id="startDateValidation"></span>
            </div>
            <div class="col">
                <label asp-for="EndDate"></label>
                <input asp-for="EndDate" type="month" class="form-control" id="endDateId"/>
            </div>
        </div>
        <br />
        <div>
            <label asp-for="Qualification"></label>
            <input asp-for="Qualification" class="form-control" id="qualificationId"/>
            <span asp-validation-for="Qualification" class="text-danger" id="qualificationValidation"></span>
        </div>
        <br />
        <div>
            <label asp-for="Majors"></label>
            <textarea asp-for="Majors" class="form-control" id="majorsId"></textarea>
            <span asp-validation-for="Majors" class="text-danger" id="majorsValidation"></span>
        </div>
        <br />
        <div>
            <label asp-for="SubMajors"></label>
            <textarea asp-for="SubMajors" class="form-control" id="submajorsId"></textarea>
        </div>
        <br />
        <div>
            <label asp-for="Research"></label>
            <textarea asp-for="Research" class="form-control" id="researchId"></textarea>
        </div>
    </div>
    <br />
    <button type="submit" class="pt-2 mb-2 btn btn-primary" id="submitButton">Add Education</button>
    <br />
</form>

@section Scripts{
    <script src="~/js/studentEducationValidation.js"></script>
}

 
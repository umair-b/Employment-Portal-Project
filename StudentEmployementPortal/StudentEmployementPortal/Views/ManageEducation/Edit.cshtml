@namespace StudentEmployementPortal.ViewModels
@model EducationViewModel

<form asp-action="Edit">

    <div>
        <label asp-for="Institution"></label>
        <input asp-for="Institution" />
        <span asp-validation-for="Institution" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" type="date" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" type="date" />
    </div>

    <div>
        <label asp-for="Qualification"></label>
        <input asp-for="Qualification" />
        <span asp-validation-for="Qualification" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Subjects"></label>
        <input asp-for="Subjects" />
    </div>

    <div>
        <label asp-for="Majors"></label>
        <input asp-for="Majors" />
    </div>

    <div>
        <label asp-for="SubMajors"></label>
        <input asp-for="SubMajors" />
    </div>

    <div>
        <label asp-for="Research"></label>
        <input asp-for="Research" />
    </div>

    <hr />

    <button type="submit" class="pt-2 btn btn-primary">Update Education</button>

    @Html.HiddenFor(Model => Model.EducationId, new { @readonly = "readonly" })
</form>
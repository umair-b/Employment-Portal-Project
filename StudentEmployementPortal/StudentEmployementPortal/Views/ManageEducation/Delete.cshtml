@namespace StudentEmployementPortal.ViewModels
@model EducationViewModel

<style>
    .right-align {
        float: right;
    }

    .left-align {
        float: left;
    }
</style>

<div>
    <a asp-controller="ManageStudentProfile" asp-action="Index" class="btn btn-outline-primary right-align " style="width:150px">
        &larr; Back
    </a>
</div>
<div class="row pb-2">
    <h2 class="text-primary">Delete Education</h2>
</div>
<hr />
<form asp-action="DeleteEducation">

    <div class="form-control">
        <div>
            <label asp-for="Institution"></label>
            <input asp-for="Institution" class="form-control" />
            <span asp-validation-for="Institution" class="text-danger"></span>
        </div>
        <br />
        <div class="row">
            <div class="col">
                <label asp-for="StartDate"></label>
                <input asp-for="StartDate" type="date" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="col">
                <label asp-for="EndDate"></label>
                <input asp-for="EndDate" type="date" class="form-control" />
            </div>
        </div>
        <br />
        <div>
            <label asp-for="Qualification"></label>
            <input asp-for="Qualification" class="form-control" />
            <span asp-validation-for="Qualification" class="text-danger"></span>
        </div>
        <br />
        <div>
            <label asp-for="Subjects"></label>
            <textarea asp-for="Subjects" class="form-control"></textarea>
        </div>
        <br />
        <div>
            <label asp-for="Majors"></label>
            <textarea asp-for="Majors" class="form-control"></textarea>
        </div>
        <br />
        <div>
            <label asp-for="SubMajors"></label>
            <textarea asp-for="SubMajors" class="form-control"></textarea>
        </div>
        <br />
        <div>
            <label asp-for="Research"></label>
            <textarea asp-for="Research" class="form-control"></textarea>
        </div>
    </div>
    <br />
    <button type="submit" class="pt-2 btn btn-primary">Delete Education</button>

    @Html.HiddenFor(Model => Model.EducationId, new { @readonly = "readonly" })
</form>

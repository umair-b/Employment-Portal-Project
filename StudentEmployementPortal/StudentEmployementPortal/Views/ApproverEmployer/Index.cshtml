@model IEnumerable<Employer>

<div class="container p-1">
    <div class="row pt-2">
        <div class="col-6">
            <h2 class="text-primary">Manage Employers</h2>
        </div>
    </div>
    @if (Model.Count() == 0)
    {
        <h3>There are no Employers to Approve :).</h3>
    }
    else
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Legal Name</th>
                    <th>Trading Name</th>
                    <th>Registration Number</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>Name</td>
                        <td>@obj.RegistrationName</td>
                        <td>@obj.TradingName</td>
                        <td>@obj.RegistrationNumber</td>
                        <td>@obj.EmployerStatus</td>
                        <td style="width:100%" class="btn-group" role="group">
                            <a asp-controller="ApproverEmployer" asp-action="ReviewEmployer" asp-route-id="@obj.UserId"
                               class="btn btn-primary mx-1">Edit</a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    }

</div>